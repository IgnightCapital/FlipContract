# Deployer Private Key (required)
PRIVATE_KEY=your_private_key_here

# Asset Configuration (required)
ASSET_ADDRESS=0x... # Address of the underlying token (e.g., USDC, WETH, WBTC)
DECIMALS=6 # Token decimals (6 for USDC, 18 for WETH, 8 for WBTC)
ASSET_SYMBOL=USD # Symbol of the asset (used in token names)

# LayerZero Configuration (required)
LZ_ENDPOINT=0x... # LayerZero endpoint address for the chain you're deploying to

# Vault Parameters (required)
VAULT_CAP=1000000 # Maximum amount of tokens the vault can hold (in whole tokens)
MIN_SUPPLY=100 # Minimum amount of tokens required for initial deposit (in whole tokens)

# Optional: Custom Token Names (if not set, defaults are used)
# WRAPPER_NAME=Stream USD
# WRAPPER_SYMBOL=streamUSD
# VAULT_NAME=Staked Stream USD
# VAULT_SYMBOL=xUSD

# RPC URLs for different networks
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR-API-KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR-API-KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR-API-KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR-API-KEY

# Etherscan API Keys for verification
ETHERSCAN_API_KEY=your_etherscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
OPTIMISM_ETHERSCAN_API_KEY=your_optimism_etherscan_api_key
BASESCAN_API_KEY=your_basescan_api_key

