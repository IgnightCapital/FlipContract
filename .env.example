# Deployer Private Key (required)
PRIVATE_KEY=your_private_key_here

# Test Mode (optional - default: false)
# Set to true to deploy MockERC20 for testing instead of using existing token
TEST_MODE=false

# Asset Configuration
# If TEST_MODE=false, these are REQUIRED:
ASSET_ADDRESS=0x... # Address of the underlying token (e.g., USDC, WETH, WBTC)
DECIMALS=6 # Token decimals (6 for USDC, 18 for WETH, 8 for WBTC)
ASSET_SYMBOL=USD # Symbol of the asset (used in token names)

# If TEST_MODE=true, these are optional (defaults will be used):
# ASSET_NAME=Test USD # Name for MockERC20 (default: "Test {ASSET_SYMBOL}")
# ASSET_SYMBOL=USD # Symbol for MockERC20 (default: "USD")
# DECIMALS=6 # Decimals for MockERC20 (default: 6)
# MOCK_MINT_AMOUNT=10000000 # Amount to mint to deployer (default: 10,000,000)

# Vault Parameters (required)
VAULT_CAP=1000000 # Maximum amount of tokens the vault can hold (in whole tokens)
MIN_SUPPLY=100 # Minimum amount of tokens required for initial deposit (in whole tokens)

# Deployed Contract Addresses (set after deployment)
# These will be populated after running Deploy.s.sol
# ASSET_ADDRESS=0x... # Set automatically if TEST_MODE=true, or set manually
# WRAPPER_ADDRESS=0x... # Address of deployed StableWrapper
# VAULT_ADDRESS=0x... # Address of deployed StreamVault

# Test Script Parameters (for test scripts like TestDepositAndStake.s.sol)
DEPOSIT_AMOUNT=1000 # Amount to deposit in whole tokens for testing

# Optional: Custom Token Names (if not set, defaults are used)
# WRAPPER_NAME=Stream USD # Defaults to "Stream {ASSET_SYMBOL}"
# WRAPPER_SYMBOL=streamUSD # Defaults to "stream{ASSET_SYMBOL}"
# VAULT_NAME=Staked Stream USD # Defaults to "Staked Stream {ASSET_SYMBOL}"
# VAULT_SYMBOL=xUSD # Defaults to "x{ASSET_SYMBOL}"

# RPC URLs for different networks
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR-API-KEY
ETHEREUM_TEST_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR-API-KEY # For testnet deployments
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR-API-KEY
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR-API-KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR-API-KEY

# Etherscan API Keys for verification
ETHERSCAN_API_KEY=your_etherscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
OPTIMISM_ETHERSCAN_API_KEY=your_optimism_etherscan_api_key
BASESCAN_API_KEY=your_basescan_api_key

